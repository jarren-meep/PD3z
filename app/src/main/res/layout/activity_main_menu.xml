<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7D954"
    android:orientation="vertical"
    tools:context=".MainMenu">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDFDFDFD" />

    <TextView
        android:id="@+id/ask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="60sp"
        android:text="How are you doing,"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="person1?"
        android:textAlignment="center"
        android:textSize="40sp"
/>

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="154dp"
        android:layout_height="68dp"
        android:layout_marginLeft="130sp"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="30sp"
        android:background="#F1F0F0"
        android:text="Update status" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDFDFDFD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="174dp">

        <ImageView
            android:id="@+id/doctorPress"
            android:layout_width="202dp"
            android:layout_height="match_parent"
            android:src="@drawable/doctor" />

        <ImageView
            android:id="@+id/documentPress"
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:src="@drawable/meddoc" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/newsPress"
            android:layout_width="202dp"
            android:layout_height="196dp"
            android:layout_weight="0"
            android:src="@drawable/newspaper" />

        <ImageView
            android:id="@+id/infoPress"
            android:layout_width="216dp"
            android:layout_height="195dp"
            android:layout_weight="1"
            android:src="@drawable/infoicon" />
    </LinearLayout>

</LinearLayout>